<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>StudentsSpring</servlet-name>
        <servlet-class>servlets.IndexServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentsSpring</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllStudents</servlet-name>
        <servlet-class>servlets.ShowAllStudentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllStudents</servlet-name>
        <url-pattern>/showAllStudents</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateStudent</servlet-name>
        <servlet-class>servlets.SaveStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateStudent</servlet-name>
        <url-pattern>/addStudent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowOneStudent</servlet-name>
        <servlet-class>servlets.ShowOneStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowOneStudent</servlet-name>
        <url-pattern>/showStudent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllGroups</servlet-name>
        <servlet-class>servlets.ShowAllGroupsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllGroups</servlet-name>
        <url-pattern>/showAllGroups</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <servlet-class>servlets.SaveGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/addGroup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowOneGroup</servlet-name>
        <servlet-class>servlets.ShowOneGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowOneGroup</servlet-name>
        <url-pattern>/showGroup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddStudentToGroup</servlet-name>
        <servlet-class>servlets.AddStudentToGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStudentToGroup</servlet-name>
        <url-pattern>/addStudentToGroup</url-pattern>
    </servlet-mapping>
</web-app>